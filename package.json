{
  "name": "ts-node-starter",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Gabriel V. Santana",
  "type": "module",
  "keywords": [
    "typescript",
    "nodejs",
    "starter",
    "boilerplate"
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "tsx --env-file .env src/main.ts",
    "lint": "eslint \"{src}/**/*.{js,ts}\" --fix",
    "test": "jest --passWithNoTests --runInBand --no-cache --forceExit",
    "test:cov": "npm t -- --coverage",
    "test:watch": "npm t -- --watch",
    "clean": "del-cli 'node_modules'"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
    "@eslint/js": "^9.16.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  }
}
